<footer>
    <div class="footer-content">
        <p>&copy; <%= new Date().getFullYear() %> <%= config.site.title %>. All rights reserved.</p>
        <div class="social-links">
            <% if (config.social) { %>
                <% Object.entries(config.social).forEach(function([platform, url]) { %>
                    <% if (url) { %>
                        <a href="<%= url %>" class="social-link" target="_blank" rel="noopener noreferrer">
                            <%= platform %>
                        </a>
                    <% } %>
                <% }); %>
            <% } %>
        </div>
    </div>
</footer> 